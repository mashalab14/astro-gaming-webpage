---
// Gamesurface Header component - Yellow area with dropdown, HUD elements, settings button
---

<header class="gamesurface-header">
  <!-- HUD elements -->
  <div class="hud tl" id="hudMoves">Moves 0</div>
  <div class="hud tl2" id="hudScore">Score 0</div>
  <div class="hud tr2" id="hudStock">Stock 24</div>
  <div class="hud tr" id="hudTime">
    <span id="timeDisplay">00:00</span>
    <button id="pausePlayBtn" class="pause-play-btn" type="button" aria-label="Pause" title="Pause" style="display: none;">
      ⏸
    </button>
  </div>

  <!-- Game switcher dropdown (top-left) -->
  <div class="game-switcher">
    <div class="switcher-trigger" id="switcherTrigger">
      <span id="currentGameName">Klondike Solitaire</span>
      <span class="dropdown-arrow">▼</span>
    </div>
    <div class="switcher-dropdown" id="switcherDropdown">
      <div class="switcher-option" data-value="klondike-solitaire">Klondike Solitaire</div>
      <div class="switcher-option" data-value="spider-solitaire">Spider Solitaire</div>
      <div class="switcher-option" data-value="freecell">FreeCell</div>
      <div class="switcher-option" data-value="hearts">Hearts</div>
      <div class="switcher-option" data-value="minesweeper-classic">Minesweeper Classic</div>
      <div class="switcher-option" data-value="2048">2048</div>
    </div>
  </div>

  <!-- Settings Button (top-right) -->
  <button id="vpSettingsBtn" class="settings-btn" type="button" aria-label="Settings" title="Settings">⚙</button>
</header>

<style>
  /* ===== Gamesurface Header (Yellow - 3rem height) ===== */
  .gamesurface-header {
    position: relative;
    height: 3rem;
    width: 100%;
    background: transparent;
    z-index: 10;
    overflow: visible;
  }

  /* HUD badges */
  .hud { 
    position: absolute; 
    font-size: 13px; 
    font-weight: 700;
    color: #e6e7eb; 
    background: transparent; 
    border: 1px solid transparent; 
    border-radius: 4px; 
    padding: 4px 6px;
    top: 8px;
    z-index: 20;
    display: flex;
    align-items: center;
    gap: 4px;
  }
  .hud.tl { left: 50%; transform: translateX(-220px); min-width: 80px; }
  .hud.tl2 { left: 50%; transform: translateX(-120px); min-width: 80px; }
  .hud.tr2 { left: 50%; transform: translateX(20px); min-width: 80px; }
  .hud.tr { left: 50%; transform: translateX(100px); min-width: 110px; width: 110px; justify-content: space-between; }
  
  /* Time display */
  #timeDisplay {
    font-size: 12px;
    color: inherit;
    flex: 1;
    text-align: left;
  }

  /* Pause/Play button inside HUD */
  .pause-play-btn {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    font-size: 12px;
    padding: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    border-radius: 3px;
    transition: background-color 0.2s ease;
    position: relative;
    z-index: 25;
    pointer-events: auto;
    flex-shrink: 0;
  }
  
  .pause-play-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .pause-play-btn:focus-visible {
    outline: 1px solid rgba(255, 255, 255, 0.5);
    outline-offset: 1px;
  }

  /* ===== Game Switcher (top-left) ===== */
  .game-switcher {
    position: absolute;
    top: 0.5rem;
    left: 1rem;
    z-index: 15;
    width: 180px;
  }

  .game-switcher:hover {
    z-index: 1001;
  }

  .switcher-trigger {
    padding: 10px 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    background: color-mix(in srgb, var(--table-bg) 20%, transparent);
    color: #e6e7eb;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.2s ease, border-color 0.2s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .switcher-trigger:hover {
    background: color-mix(in srgb, var(--table-bg) 30%, transparent);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .dropdown-arrow {
    font-size: 10px;
    margin-left: 8px;
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }

  .switcher-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #2a2a2a;
    border: 2px solid rgba(255, 255, 255, 0.6);
    border-radius: 6px;
    backdrop-filter: blur(8px);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-5px);
    transition: all 0.2s ease;
    z-index: 1000;
    margin-top: 4px;
    max-height: 200px;
    overflow-y: auto;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  }

  .game-switcher:hover .switcher-dropdown,
  .game-switcher.open .switcher-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .game-switcher:hover .dropdown-arrow,
  .game-switcher.open .dropdown-arrow {
    transform: rotate(180deg);
  }

  .switcher-option {
    padding: 10px 12px;
    color: #e6e7eb;
    cursor: pointer;
    font-size: 14px;
    transition: background 0.1s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .switcher-option:hover {
    background: color-mix(in srgb, var(--table-bg) 50%, transparent);
  }

  .switcher-option:first-child {
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
  }

  .switcher-option:last-child {
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
  }



  /* ===== Settings Button (top-right) ===== */
  .settings-btn {
    position: absolute;
    top: 0.5rem;
    right: 1rem;
    width: 2rem;
    height: 2rem;
    border: 1px solid transparent;
    border-radius: 6px;
    background: transparent;
    color: #e6e7eb;
    cursor: pointer;
    font-size: 1.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(4px);
    z-index: 60;
    pointer-events: auto;
  }

  .settings-btn:hover {
    background: transparent;
    border-color: transparent;
  }

  .settings-btn:focus-visible {
    outline: none;
  }
</style>
