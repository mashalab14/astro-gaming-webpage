---
// Gamesurface Header component - Yellow area with dropdown, HUD elements, settings button
---

<header class="gamesurface-header">
  <!-- HUD elements -->
  <div class="hud tl" id="hudMoves">Moves 0</div>
  <div class="hud tl2" id="hudScore">Score 0</div>
  <div class="hud tr2" id="hudStock">Stock 24</div>
  <div class="hud tr" id="hudTime">
    <span id="timeDisplay">00:00</span>
    <button id="pausePlayBtn" class="pause-play-btn" type="button" aria-label="Start Game" title="Start Game">
      ▶
    </button>
  </div>

  <!-- Game switcher dropdown (top-left) -->
  <div class="game-switcher">
    <div class="switcher-trigger">Games</div>
    <select id="gameSwitcherSelect" class="switcher-select" title="Switch game">
      <option value="klondike-solitaire">Klondike Solitaire</option>
      <option value="spider-solitaire">Spider Solitaire</option>
      <option value="freecell">FreeCell</option>
      <option value="hearts">Hearts</option>
      <option value="minesweeper-classic">Minesweeper Classic</option>
      <option value="2048">2048</option>
    </select>
  </div>

  <!-- Settings Button (top-right) -->
  <button id="vpSettingsBtn" class="settings-btn" type="button" aria-label="Settings" title="Settings">⚙</button>
</header>

<style>
  /* ===== Gamesurface Header (Yellow - 3rem height) ===== */
  .gamesurface-header {
    position: relative;
    height: 3rem;
    width: 100%;
    background: transparent;
    z-index: 10;
    overflow: hidden;
  }

  /* HUD badges */
  .hud { 
    position: absolute; 
    font-size: 13px; 
    font-weight: 700;
    color: #e6e7eb; 
    background: color-mix(in srgb, var(--table-bg) 75%, transparent); 
    border: 1px solid transparent; 
    border-radius: 4px; 
    padding: 4px 6px;
    top: 8px;
    z-index: 20;
    display: flex;
    align-items: center;
    gap: 4px;
  }
  .hud.tl { left: 50%; transform: translateX(-220px); min-width: 80px; }
  .hud.tl2 { left: 50%; transform: translateX(-120px); min-width: 80px; }
  .hud.tr2 { left: 50%; transform: translateX(20px); min-width: 80px; }
  .hud.tr { left: 50%; transform: translateX(100px); min-width: 100px; width: 100px; }
  
  /* Time display */
  #timeDisplay {
    font-size: 12px;
    color: inherit;
    margin-right: 6px;
  }

  /* Pause/Play button inside HUD */
  .pause-play-btn {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    font-size: 12px;
    padding: 2px 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 3px;
    transition: background-color 0.2s ease;
    position: relative;
    z-index: 25;
    pointer-events: auto;
  }
  
  .pause-play-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .pause-play-btn:focus-visible {
    outline: 1px solid rgba(255, 255, 255, 0.5);
    outline-offset: 1px;
  }

  /* ===== Game Switcher (top-left) ===== */
  .game-switcher {
    position: relative;
    top: 0.5rem;
    left: 1rem;
    z-index: 15;
  }

  .switcher-select {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 4px;
    padding: 8px 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    background: color-mix(in srgb, var(--table-bg) 70%, transparent);
    color: #e6e7eb;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    backdrop-filter: blur(4px);
    min-width: 160px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    z-index: 100;
  }

  .switcher-trigger {
    padding: 8px 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    background: color-mix(in srgb, var(--table-bg) 70%, transparent);
    color: #e6e7eb;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    backdrop-filter: blur(4px);
    min-width: 160px;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .switcher-trigger:hover {
    background: color-mix(in srgb, var(--table-bg) 80%, transparent);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .game-switcher:hover .switcher-select {
    opacity: 1;
    pointer-events: auto;
  }

  .switcher-select:hover {
    background: color-mix(in srgb, var(--table-bg) 80%, transparent);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .switcher-select:focus-visible {
    outline: none;
  }

  .switcher-select option {
    background: var(--table-bg);
    color: #e6e7eb;
  }
  
  /* Ensure dropdown appears below the select box */
  .switcher-select {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
  }



  /* ===== Settings Button (top-right) ===== */
  .settings-btn {
    position: absolute;
    top: 0.5rem;
    right: 1rem;
    width: 2rem;
    height: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    background: transparent;
    color: #e6e7eb;
    cursor: pointer;
    font-size: 1.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(4px);
    z-index: 60;
    pointer-events: auto;
  }

  .settings-btn:hover {
    background: color-mix(in srgb, var(--table-bg) 30%, transparent);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .settings-btn:focus-visible {
    outline: none;
  }
</style>
