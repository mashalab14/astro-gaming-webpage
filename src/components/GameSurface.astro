---
// Game Surface component - restructured with 4 distinct components
import Gamesurface_Header from './Gamesurface_Header.astro';
import GameCanvas from './GameCanvas.astro';
import Gamesurface_Footer from './Gamesurface_Footer.astro';
import AdArea from './AdArea.astro';
import PauseOverlay from './PauseOverlay.astro';
---

<section class="viewport" id="game" aria-label="Game viewport" role="region">
  <!-- Yellow: Gamesurface_Header (3rem height) -->
  <Gamesurface_Header />
  
  <!-- Main content area with game canvas and ad area -->
  <div class="main-content">
    <!-- Red: Game Canvas (80% width, viewport height - 6rem) -->
    <GameCanvas />
    
    <!-- Green: AdArea (20% width, existing component) -->
    <AdArea />
  </div>
  
  <!-- Purple: Gamesurface_Footer (3rem height) -->
  <Gamesurface_Footer />
  
  <!-- Pause Overlay -->
  <PauseOverlay />
</section>

<style>
  /* ===== Game viewport - New 4-component layout ===== */
  .viewport { 
    position: relative; 
    border: none; 
    border-radius: 0; 
    height: 100vh; 
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* ===== Main content area (middle section) ===== */
  .main-content {
    display: flex;
    flex: 1;
    min-height: 0; /* Allow flex shrinking */
    position: relative;
  }

  /* Adjusting widths for AdArea and GameCanvas */
  GameCanvas {
    flex: 7;
  }

  AdArea {
    flex: 3;
  }
</style>
